<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="expenses_tracking.CategoriesDashboardController">
   <children>
      <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" prefHeight="400.0" prefWidth="600.0" spacing="25.0" style="-fx-background-color: #ffffff; -fx-padding: 30; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 12, 0, 0, 6);" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
         <children>
            <Label fx:id="categoriesTitleLabel" text="Manage Categories" textFill="#2c3e50">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="userInfoLabelCategories" text="User: " textFill="#555555">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="addCategoryButton" mnemonicParsing="false" onAction="#handleAddCategory" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 7;" text="Add New Category" />
            <Button fx:id="viewCategoriesButton" mnemonicParsing="false" onAction="#handleViewCategories" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #f0ad4e; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 7;" text="View &amp; Edit Categories" />
            <Button fx:id="backToMainDashboardButton" mnemonicParsing="false" onAction="#handleBackToMainDashboard" prefHeight="45.0" prefWidth="250.0" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 7;" text="Back to Main Dashboard">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
